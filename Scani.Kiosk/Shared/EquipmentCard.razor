<div class="equipment-card">
    <span class="icon">📷</span>
    <span class="name">@Equipment.Name</span>
    @if (ActionName != null)
    {
        <button @onclick="() => OnAction.InvokeAsync(Equipment)">
            @ActionName
        </button>
    }
</div>

@code {
    [Parameter] public EquipmentRow Equipment { get; set; } = null!;
    [Parameter] public string? ActionName { get; set; } = null!;
    [Parameter] public EventCallback<EquipmentRow> OnAction { get; set; } = EventCallback<EquipmentRow>.Empty;
}
