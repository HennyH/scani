<div class="equipment-card">
    <span class="icon">📷</span>
    <span class="name">@Equipment.DisplayName</span>
    @if (ActionName != null)
    {
        <button @onclick="() => OnAction.InvokeAsync(Equipment)">
            @ActionName
        </button>
    }
</div>

@code {
    [Parameter] public EquipmentInfo Equipment { get; set; } = null!;
    [Parameter] public string? ActionName { get; set; } = null!;
    [Parameter] public EventCallback<EquipmentInfo> OnAction { get; set; } = EventCallback<EquipmentInfo>.Empty;
}
