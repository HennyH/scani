@inject ActiveUserService ActiveUserService

<button disabled="@(!ActiveUserState.HasActiveUser)" @onclick="@HandleExitClicked" style="background-color: lightcoral; width: 150px">
    <img src="/assets/images/stop-sign.svg" style="height: 60px" />
    Exit
</button>

@code {
    [Parameter] public EventCallback OnLogout { get; set; } = EventCallback.Empty;
    [CascadingParameter] public ActiveUserState ActiveUserState { get; set; } = null!;

    private async Task HandleExitClicked()
    {
        ActiveUserService.LogoutActiveUser();
        await OnLogout.InvokeAsync();
    }
}
